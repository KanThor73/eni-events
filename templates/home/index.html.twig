{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
    <div class="start-background d-flex flex-column justify-content-center ">
        <div class="content">
            <div class="start d-flex">
                <div class="leftStart d-flex flex-column align-items-center">
                    <div class="logo m-1"></div>
                    <h1>En avant l'aventure !</h1>
                </div>
                <div class="rightStart d-flex justify-content-center align-items-center">
                    {% if app.user %}
                        <a href="{{ path('event_showroom') }}"><i class="fa-solid fa-arrow-right-to-bracket"></i></a>
                    {% else %}
                        <a href="{{ path('app_login') }}"><i class="fa-solid fa-arrow-right-to-bracket"></i></a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}
