{% extends 'base.html.twig' %}

    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/eventShowroom.css') }}">
    {% endblock %}

{% block title %}Event-Showroom{% endblock %}
{% block body %}
    {% set today = "now"|date("d-m-Y") %}
    <div class="info">
        <div class="d-flex">
            <label class="mr-1 " for="user">Date :</label>
            <p>{{ today }}</p>
        </div>
        <div class="d-flex">
            <label class="mr-1 " for="user">Participant :</label>
            {% if app.user %}
                <p>{{ app.user.firstname }}</p>
            {% endif %}

        </div>
    </div>
    <h1 class="m-2">Évènements</h1>
    <form method="post" action="{{ path('event_showroom') }}">
        <div class="search-container">
            {{ form_start(form) }}
            <div class="part1">
                <div class="row">
                    {{ form_label(form.campus) }}
                    {{ form_widget(form.campus) }}
                </div>
                <div class="row">
                    {{ form_label(form.eventName) }}
                    {{ form_widget(form.eventName) }}
                </div>
                <div class="date">
                    <div class="row">
                        {{ form_label(form.beginDate) }}
                        {{ form_widget(form.beginDate) }}
                    </div>
                    <div class="row">
                        {{ form_label(form.endDate) }}
                        {{ form_widget(form.endDate) }}
                    </div>
                </div>
            </div>
            <div class="part2">
                <div class="row">
                    {{ form_label(form.isOrganizer) }}
                    {{ form_widget(form.isOrganizer) }}
                </div>
                <div class="row">
                    {{ form_label(form.isMember) }}
                    {{ form_widget(form.isMember) }}
                </div>
                <div class="row">
                    {{ form_label(form.isNotMember) }}
                    {{ form_widget(form.isNotMember) }}
                </div>
                <div class="row">
                    {{ form_label(form.passed) }}
                    {{ form_widget(form.passed) }}
                </div>
            </div>
            <div class="separator"></div>
            <div class="part3">
                <button class="btn-primary" type="submit">RECHERCHER</button>
            </div>
            {{ form_end(form) }}
        </div>
    </form>
    <div class="form-container">
        <div class="event-topbar">
            <span class="name">Nom</span>
            <div class="separator-inline"></div>
            <span>Date</span>
            <div class="separator-inline"></div>
            <span>Clôture inscription</span>
            <div class="separator-inline"></div>
            <span>Inscrits/Places</span>
            <div class="separator-inline"></div>
            <span>État</span>
            <div class="separator-inline"></div>
            <span class="isMember">Inscrit</span>
            <div class="separator-inline"></div>
            <span class="isOrganizer">Organisateur</span>
            <div class="separator-inline"></div>
            <span class="action">Action</span>
        </div>
        {% if events %}
            {% for event in events %}
                {% set isMember = false %}
                {% for member in event.members %}
                    {% if member == app.user %}
                        {% set isMember = true %}
                    {% endif %}
                {% endfor %}
                {% set isOrganizer = false %}
                {% if app.user %}
                    {% if event.organizer.id == app.user.id %}
                        {% set isOrganizer = true %}
                    {% endif %}
                {% endif %}
                <div class="event-item {{ cycle(['dark', 'light'], loop.index) }}">
                    <span class="name">{{ event.name }}</span>
                    <div class="separator-inline"></div>
                    <span class="begindate">{{ event.beginDate | date("m/d/Y") }}</span>
                    <div class="separator-inline"></div>
                    <span class="limitDate">{{ event.limitDate | date("m/d/Y") }}</span>
                    <div class="separator-inline"></div>
                    <span class="inscription">{{ event.getNbrOfMembers }}/{{ event.nbMaxInscription }}</span>
                    <div class="separator-inline"></div>
                    <span class="state">{{ event.state.label }}</span>
                    <div class="separator-inline"></div>
                    {% if isMember %}
                        <span class="isMember">X</span>
                    {% else %}
                        <span class="isMember"> </span>
                    {% endif %}
                    <div class="separator-inline"></div>
                    <span class="isOrganizer"><a
                                href="{{ path('showProfil',{id: event.organizer.id }) }}">{{ event.organizer.firstname }} {{ event.organizer.name | slice(0, 1) | capitalize }}</a></span>
                    <div class="separator-inline"></div>
                    {% if isMember and not isOrganizer and event.limitDate | date("m/d/Y")|date('U') > today | date("m/d/Y")|date('U') %}
                        <span><a class="action" href="{{ path('show',{id: event.id }) }}">Afficher</a> / <a
                                    href="{{ path('desist',{id: event.id }) }}">Se desister</a></span>
                    {% elseif not isMember and not isOrganizer and event.state.label == 'Ouvert' and event.limitDate | date("m/d/Y")|date('U') > today | date("m/d/Y")|date('U') and  event.getNbrOfMembers < event.nbMaxInscription %}
                        <span><a class="action" href="{{ path('show',{id: event.id }) }}">Afficher</a> / <a
                                    class="action" href="{{ path('register',{id: event.id }) }}">S'inscrire</a> </span>
                    {% elseif isOrganizer and event.state.label == 'En cours' %}
                        <span><a class="action" href="{{ path('edit',{id: event.id }) }}">Modifier</a> / <a
                                    class="action" href="{{ path('publish',{id: event.id }) }}">Publier</a></span>
                    {% elseif isOrganizer and event.state.label == 'En creation' %}
                        <span><a class="action" href="{{ path('edit',{id: event.id }) }}">Modifier</a></span>
                    {% elseif event.limitDate | date("m/d/Y")|date('U') <= today | date("m/d/Y")|date('U') or event.state.label == 'Ferme' %}
                        <span><a class="action" href="{{ path('show',{id: event.id }) }}">Afficher</a></span>
                    {% elseif event.state.label == 'Ouvert' and isOrganizer %}
                        <span><a class="action" href="{{ path('show',{id: event.id }) }}">Afficher</a> / <a
                                    class="action" href="{{ path('cancel',{id: event.id }) }}">Annuler</a></span>
                    {% endif %}
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <div class="button m-2">
        <a href="{{ path('create_event') }}">
            <button class="btn-primary">Créer un évènement</button>
        </a>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
{% endblock %}
