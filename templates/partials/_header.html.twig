<header class="p-1 d-flex align-items-center">
    <a href="{{ path('event_showroom') }}">
        <div class="logo"></div>
    </a>
    <div class="menu d-flex align-items-center">
        {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
            <a class="admin m-1" href="{{ path('app_admin') }}"><h3>Admin</h3></a>
        {% endif %}
        <div class="log d-flex align-items-center">
            <a href="{{ path('event_showroom') }}"><h3>Évènements</h3></a>
            <div class="separator-header"></div>
            {% if app.user %}
                <a class="m-1" href="{{ path('app_user_profil', {id : app.user.id}) }}"><h3>Mon Profil</h3></a>
                <div class="separator-header"></div>
                <a class="m-1" href="{{ path('app_logout') }}"><h3>Déconnexion</h3></a>
            {% else %}
                <a class="m-1" href="{{ path('app_login') }}"><h3>Se connecter</h3></a>
            {% endif %}
        </div>
    </div>
</header>
{% if app.session.flashbag.has('success') or app.session.flashbag.has('error') %}
    <div class="msgFlash">
        {% if app.session.flashbag.has('error') %}
            <div class="flash_error">
                {% for flashError in app.session.flashbag.get('error') %}
                    {{ flashError }}
                {% endfor %}
            </div>
        {% endif %}
        {% if app.session.flashbag.has('success') %}
            <div class="flash_success">
                {% for flashSuccess in app.session.flashbag.get('success') %}
                    {{ flashSuccess }}
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endif %}
